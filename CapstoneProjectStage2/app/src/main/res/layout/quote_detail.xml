<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quote_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/quote_text_size"
        android:textStyle="italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/quote_detail_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_detail_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/author_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="end"
        android:paddingEnd="@dimen/author_margin"
        android:textSize="@dimen/author_name_dimen" />

